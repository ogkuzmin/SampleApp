<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/grid_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:numColumns="auto_fit"
        android:columnWidth="@dimen/grid_item_width"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="@dimen/grid_between_item_spacing"
        android:verticalSpacing="@dimen/grid_between_item_spacing"
        android:paddingLeft="@dimen/grid_left_right_padding"
        android:paddingRight="@dimen/grid_left_right_padding"/>

</LinearLayout>
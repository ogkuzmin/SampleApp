<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/grid_item_width"
    android:layout_height="@dimen/grid_item_width">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_container"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/smal_margin_size"
        android:layout_marginTop="@dimen/smal_margin_size"
        android:id="@+id/image_delete_button"
        android:src="@drawable/ic_delete_button"
        android:layout_gravity="end|top"
        android:background="@null"/>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content_area"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_text_view"
        android:textColor="@android:color/black"
        android:textSize="@dimen/primary_text_size"
        android:layout_margin="@dimen/standard_margin"
        android:text="11111"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_text_view"
        android:layout_toRightOf="@id/id_text_view"
        android:layout_marginTop="@dimen/standard_margin"
        android:textColor="@color/non_active_grey_text"
        android:textSize="@dimen/small_text_size"
        android:text="10/10/2013, 12:46"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_text_view"
        android:layout_below="@id/date_text_view"
        android:layout_toRightOf="@id/id_text_view"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:textColor="@android:color/black"
        android:textSize="@dimen/small_text_size"
        android:text="xxx: Сидим с женой у компа и жуём колбасу. Открывается почта, там мне письмо от одноглазников в котором гордо сообщается, что жена сегодня отмечает День Вегетарианца. Ну что ж. Поздравил." />

    </RelativeLayout>

</android.support.v7.widget.CardView>
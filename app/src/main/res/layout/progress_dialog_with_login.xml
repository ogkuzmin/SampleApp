<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ProgressBar
        android:layout_width="@dimen/progress_bar_in_dialog_size"
        android:layout_height="@dimen/progress_bar_in_dialog_size"
        android:id="@+id/progress_bar_login"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/lef_margin_in_dialog"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_view_height_in_dialog"
        android:layout_margin="@dimen/margin_between_items_dialog"
        android:paddingRight="@dimen/padding_dialog_size"
        android:text="@string/progress_dialog_title"
        android:textSize="@dimen/primary_text_size"
        android:layout_toRightOf="@id/progress_bar_login"
        android:gravity="center_vertical"/>


</RelativeLayout>